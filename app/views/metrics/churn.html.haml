.panel-heading
  %h1 
    %i.icon-copy
    = @project.title
    Duplications
.list-group
  .list-group-item
    %h4 File churns
  .list-group-item
    %img{src: "/images/horison_sunbrust.jpg", style: "width: 100%;"}    
  .list-group-item
    %table.table.table-striped.churn
      %th.name File path
      %th.times Times changed
      - @report.churns.file_churns.each do |churn|
        %tr
          %td= link_to churn.targetable.path, project_report_file_path(@project, @report, file_id: churn.targetable)
          %td= churn.times_changed  

  .list-group-item
    %h4 Class churns
  .list-group-item
    %img{src: "/images/horison_sunbrust.jpg", style: "width: 100%;"}    
  .list-group-item
    %table.table.table-striped.churn
      %th.name Class name
      %th.times Times changed
      - @report.churns.class_churns.each do |churn|
        %tr
          %td= churn.targetable.name
          %td= churn.times_changed

  .list-group-item
    %h4 Method churns
  .list-group-item
    %img{src: "/images/horison_sunbrust.jpg", style: "width: 100%;"}    
  .list-group-item
    %table.table.table-striped.churn
      %th.name Method name
      %th.times Times changed
      - @report.churns.method_churns.each do |churn|
        %tr
          %td= churn.targetable.name
          %td= churn.times_changed 
