.panel-heading
  %h1 
    %i.icon-bug
    = @project.title
    Smells
.list-group
  .list-group-item
    .row
      .col-lg-6.col-md-6.col-sm-6
        %h4 Smells ratio
      .col-lg-6.col-md-6.col-sm-6
        %h4 Classes ratio
  .list-group-item
    .row
      .col-lg-6.col-md-6.col-sm-6.text-center
        %div{id: "#{@project.title}-smell-donut"}
      .col-lg-6.col-md-6.col-sm-6.text-center
        %div{id: "#{@project.title}-class-smell-donut"}
  .list-group-item
    %h4 Class - Smells Graph
  .list-group-item
    %img{src: "/images/horison_sunbrust.jpg", style: "width: 100%;"}    
  .list-group-item
    .row
      .col-lg-9.col-md-9.col-sm-9
        %h4 Listing smells
      .col-lg-3.col-md-3.col-sm-3
        %h4 Slophgraph
  .list-group-item
    .row
      .col-lg-12.col-md-12.col-sm-12
        %table.table.table-striped{style: "width: 100%;"}
          %th Method name
          %th Small type
          -#%th Message
          - @report.smells.includes(:targetable).reeks.each do |smell|
            %tr
              %td= smell.targetable.name
              %td= smell.smell
              -#%td= smell.message

        -# %table{style: "width: 100%;"}
        -#   %th File path
        -#   %th Line num
        -#   %th Message
        -#   - @report.roodis.each do |roodi|
        -#     %tr
        -#       %td= roodi.file_line_info.target_file.path
        -#       %td= roodi.file_line_info.line_num
        -#       %td= roodi.message


