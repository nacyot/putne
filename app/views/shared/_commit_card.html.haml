.panel
  .row
    .col-lg-2.col-sm-2.text-center
      = gravatar_image_for_commit(commit.author_email)
    .col-lg-8.col-sm-7{style: "padding-left: 30px;"}
      %p
        Project:
        = commit.repository.project.title
      %p
        Commit:
        = commit.committed_at
      %p
        Author:
        = "#{commit.author_name} <#{commit.author_email}>"
      %p
        Commit ID: 
        = commit.commit_hash[0..15]
    .col-lg-2.col-sm-3
      - unless commit.report.nil?
        = link_to "Report", project_report_path(commit.repository.project, commit.report), class: "btn btn-primary"
      - else
        = link_to "Create", project_reports_path(commit.repository.project, hash: commit.commit_hash), class: "btn btn-warning", method: :post
