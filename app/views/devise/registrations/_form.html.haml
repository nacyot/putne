= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  = f.error_notification
  
  .form-group= f.input :email, label: "E-mail", input_html: {class: "form-control", placeholder: "E-mail"}
  .form-group= f.input :password, label: "Password", input_html: {class: "form-control", placeholder: "Password"}
  .form-group= f.input :password_confirmation, label: "Password Confirmation", input_html: {class: "form-control", placeholder: "Password"}
  .actions
    = f.button :submit, class: "btn btn-info"
= render "devise/shared/links"

