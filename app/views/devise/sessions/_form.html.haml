= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  = f.error_notification
  
  .form-group= f.input :email, label: "E-mail", input_html: {class: "form-control", placeholder: "E-mail"}
  .form-group= f.input :password, label: "Password", input_html: {class: "form-control", placeholder: "Password"}
  - if devise_mapping.rememberable?
    .form-group= f.input :remember_me, as: :boolean, label: "&nbsp; Remember me"
  .actions
    = f.button :submit, class: "btn btn-info"

= render "devise/shared/links"

